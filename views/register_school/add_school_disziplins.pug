extends ../layout

block content
    form#reused_form.montform(method='POST', enctype='multipart/form-data' action='/schools/add_school_disziplins')
        .card-header.bg-info.text-white
            | Es braucht nicht viel, um deine Schule zu verflüssigen...
        .card-body
            #form-transition-group.my-margin-top        
                .form-row
                    .form-group.col-md-12
                        br 
                        h5.text-info 2/7 die Schulfächer    
                    .form-group.col-md-12                                   
                        .container-fluid(style='margin-left:10px; border:none !important;')
                            .row.justify-content-start
                                - var k = 0;
                                while k < 60
                                    - k++
                                    if k == 1 
                                        .col-2(style='margin-bottom:10px; padding-left:0px !important; border:none !important;')
                                            input#validationServer01.form-control(type='text', placeholder= k + '. z.B. \'Deutsch\'', name='fdisziplin['+ k +']')              
                                    else
                                        .col-2(style='margin-bottom:10px; padding-left:0px !important; border:none !important;')
                                            input#validationServer01.form-control(type='text', placeholder= k + '.', name='fdisziplin['+ k +']')
            br
            input#geht_ab.btn.btn-info.my-margin-top.bg-info.text-white.float-right(type='submit', value='Unterrichtsfächer')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/js/add_school.js')