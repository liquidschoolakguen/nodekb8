extends ../layouts/layout

block content
    form#reused_form.montform(method='POST', action='/groups/add_group')
        .card
            .card-header.bg-success.text-white
                | Neue Schülergruppe erstellen 
            .card-body
                each stamm, i in user.school.s_stamms
                    button.btn.btn-primary(type='button', data-toggle='modal', data-target='#exampleModalCenter') #{stamm.name}
                    #exampleModalCenter.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalCenterTitle', aria-hidden='true')
                        .modal-dialog.modal-dialog-centered(role='document')
                            .modal-content
                                .modal-header
                                    h5#exampleModalLongTitle.modal-title  #{stamm.name}
                                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                                        span(aria-hidden='true') &times;
                                .modal-body
                                | hahahahah ahahahahah ahhahaha 
                                .modal-footer
                                    button.btn.btn-secondary(type='button', data-dismiss='modal') Close
                                    button.btn.btn-primary(type='button') Save changes
                        hr 
                        br                     
                        .col-12
                            .form-check
                                input#exampleRadios1.form-check-input(type='radio', name='for_all', value='1')
                                label.form-check-label(for='exampleRadios1')
                                    | als öffentliche Vorlage speichern
                            .form-check
                                input#exampleRadios2.form-check-input(type='radio', name='for_all', value='2')
                                label.form-check-label(for='exampleRadios2')
                                    | als private Vorlage speichern
                            .form-check
                                input#exampleRadios3.form-check-input(type='radio', name='for_all', value='0', checked='')
                                label.form-check-label(for='exampleRadios3')
                                    | nicht speichern         
                input#geht_ab.btn.btn-success.my-margin-top.bg-success.text-white.float-right(type='submit', value='weiter')
                  
