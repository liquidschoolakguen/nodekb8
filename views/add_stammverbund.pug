extends layout

block content
            form#reused_form.montform(method='POST', enctype='multipart/form-data' action='/stammverbunds/add_stammverbund')
                .card.border.border-success
                    .card-header.bg-success.text-white
                        | Klassenverbund erstellen 
                    .card-body
                        #form-transition-group.my-margin-top
                                .form-row
                                    .form-group.col-md-12                                   
                                        .container-fluid(style='margin-left:10px; border:none !important;')
                                            .row.justify-content-start
                                                each stamm, i in user.school.s_stamms
                                                    .col-1(style='margin-bottom:0px; border:none !important;')
                                                        input#defaultCheck1.form-check-input(type='checkbox', value= stamm._id,  name='stamms[]')
                                                        label.form-check-label(for='defaultCheck1')
                                                        | #{stamm.name}
                                    .form-group.col-md-12
                                        br
                                        input#validationServer01.form-control(type='text', placeholder='Titel des Klassenverbunds',  required='' name='name')
                                        .valid-feedback                                           
                                input#geht_ab.btn.btn-success.my-margin-top.bg-success.text-white.float-right(type='submit', value='speichern')
            script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js')
            script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
            script(src='/js/add_article.js')  