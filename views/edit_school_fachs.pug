extends layout

block content
    form#reused_form.montform(method='POST', enctype='multipart/form-data' action='/schools/edit4/' + school._id )
        .card-header.bg-info.text-white
            | Unterrichtsfächer ändern
        .card-body
            #form-transition-group.my-margin-top
                .form-row.my-margin-top 
                    .form-group.col-md-12                                   
                        .container-fluid(style='margin-left:10px; border:none !important;')
                            .row.justify-content-start
                                - var z = 0;
                                while z < 60
                                    .col-2(style='margin-bottom:10px; padding-left:0px !important; border:none !important;')
                                        input#validationServer01.form-control.text-info(type='text', placeholder= '', value=school.fachs[z], name='ffach['+ z +']')
                                        - z++
            br
            input#geht_ab.btn.btn-info.my-margin-top.bg-info.text-white.float-right(type='submit', value='Änderungen speichern')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/js/add_school.js')  
    link(rel='stylesheet', href='//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css')
    link(rel='stylesheet', href='/resources/demos/style.css')
    script(src='https://code.jquery.com/jquery-1.12.4.js')
    script(src='https://code.jquery.com/ui/1.12.1/jquery-ui.js') 
    script(type='text/javascript', src='http://jquery-ui.googlecode.com/svn/tags/latest/ui/minified/i18n/jquery-ui-i18n.min.js')