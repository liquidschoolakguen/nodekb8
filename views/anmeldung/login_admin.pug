extends ../layout_empty

block content
    .container
      .row.h-100.d-flex.justify-content-center
        .col-12.col-sm-8.col-md-5.col-lg-5
          .card.border
            .card-header
              ul#bologna-list.nav.nav-tabs.card-header-tabs(role='tablist')
                li.nav-item
                  .nav-link.active(href='#bingo', role='tab', aria-controls='bingo', aria-selected='false') Administratoranmeldung
            .card-body
              br
              h6.float-right Schuleinstellungen konfigurieren?
              h4.float-right Anmelden und es kann losgehen
              br
              .tab-content.mt-3
                #bingo.tab-pane.active(role='tabpanel', aria-labelledby='bingo-tab')
                  p.card-text
                    br
                    form(method='POST', action='/users/login_a')
                        #form-group  
                            br
                            label Adminschlüssel:
                            input#validationServer01.form-control.monospace(name='admin_schluessel', title='Frage den Hauptadministrator deiner Schule, wenn du den Adminschlüssel nicht kennst' type=text, required=''  minlength='10')
                            br
                        #form-group  
                            label Email:
                            input#validationServer01.form-control(name='username', type=email, required='')
                            br
                        #form-group  
                            label Passwort:
                            input#validationServer01.form-control(type='password', name='password', required='') 
                        br
                        input.btn.btn-primary.my-margin-top.bg-primary.text-white.float-right(type='submit', value='Anmelden und loslegen')                        
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js')
        script(src='/bower_components/bootstrap/dist/js/bootstrap.js')  
        script(src='/js/log_reg.js')